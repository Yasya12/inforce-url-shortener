@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - URL Shortener</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

</head>
<body class="bg-gray-50">
    <header class="bg-gray-800 text-white shadow-md">
        <nav class="container mx-auto px-4 h-16 flex justify-between items-center">

            <div class="flex items-center gap-6">
                <a href="/browser/urls" class="text-xl font-bold hover:text-gray-300">
                    URL Shortener
                </a>

                <a href="/browser/urls" class="text-sm font-semibold text-gray-300 hover:text-white transition-colors">
                    All URLs
                </a>

                <a href="/about" class="text-sm font-semibold text-white">
                    About
                </a>
            </div>

            <div>
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <div class="flex items-center gap-4">
                        <span class="text-sm text-gray-300">@User.FindFirst(ClaimTypes.Email)?.Value</span>
                        <a href="/Logout" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                            Logout
                        </a>
                    </div>
                }
                else
                {
                    <a href="/browser/login" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        Login
                    </a>
                }
            </div>
        </nav>
    </header>

    <div class="container mx-auto p-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>
</body>
</html>